<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="container/type/anderspink/db" VERSION="20210308" COMMENT="XMLDB file for Totara workspace"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="anderspink_api_settings" COMMENT="A api settings storage">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="api_key" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="team_name" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="team_name_idx" UNIQUE="false" FIELDS="team_name"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="anderspink_briefings" COMMENT="Store any anderspink briefings from api">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="team" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="api_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="img" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="team_idx" UNIQUE="false" FIELDS="team"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="anderspink_boards" COMMENT="Store any saved boards from api">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="team" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="api_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="img" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="team_idx" UNIQUE="false" FIELDS="team"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="anderspink_bridge" COMMENT="Store Anders Pink bridge information">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="team" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="workspace" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="user" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="team_idx" UNIQUE="false" FIELDS="team"/>
                <INDEX NAME="workspace_idx" UNIQUE="false" FIELDS="workspace"/>
                <INDEX NAME="type_idx" UNIQUE="false" FIELDS="type_id"/>
                <INDEX NAME="user_idx" UNIQUE="false" FIELDS="user"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="anderspink_bridged_articles" COMMENT="STORE ids of articles assigned to a bridge">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="bridge" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="article" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="bridge_idx" UNIQUE="false" FIELDS="bridge"/>
                <INDEX NAME="article_idx" UNIQUE="false" FIELDS="article"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="anderspink_discussion_index" COMMENT="STORE ids of discussion generated by a cron job">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="discussion" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="PRIMARY" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="discussion_idx" UNIQUE="false" FIELDS="discussion"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
